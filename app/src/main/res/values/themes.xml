<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PicturaWalls" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/default_theme</item>

        
       <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.PicturaWalls" parent="Base.Theme.PicturaWalls" />
    <style name="Theme.PicturaWalls.Fullscreen" parent="Theme.PicturaWalls">
        <item name="android:actionBarStyle">@style/Widget.Theme.PicturaWalls.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.PicturaWalls.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="Theme.PicturaWalls.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PicturaWalls.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PicturaWalls.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>